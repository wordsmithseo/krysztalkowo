rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {

    // Zasady dla folderu images
    match /images/{userId}/{allPaths=**} {
      // Pozwól zalogowanym użytkownikom na:
      // - odczyt własnych plików (read)
      // - zapis własnych plików (write)
      // - listowanie własnych plików (list)
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Domyślnie blokuj dostęp do wszystkich innych plików
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
